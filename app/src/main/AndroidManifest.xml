<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Filmoteca">

        <!-- Lanzador principal -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Ej.2: About (intents implÃ­citos dentro de la activity) -->
        <activity
            android:name=".AboutActivity"
            android:exported="false" />

        <!-- Ej.3: Lista XML/Recycler + detalle XML -->
        <activity
            android:name=".FilmListActivity"
            android:exported="false" />
        <activity
            android:name=".FilmDetailActivity"
            android:exported="false" />

        <!-- Ej.5: Lista Compose + detalle Compose -->
        <activity
            android:name=".FilmListComposeActivity"
            android:exported="false" />
        <activity
            android:name=".FilmDetailComposeActivity"
            android:exported="false" />

    </application>
</manifest>
